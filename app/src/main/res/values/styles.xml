<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryHighEmp</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondaryHighEmp</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurfaceHighEmp</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
        <item name="android:colorBackground">@color/design_default_color_background</item>
        <item name="colorOnBackground">#000000</item>


        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MyApp.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MyApp.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MyApp.LargeComponent
        </item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.MyApp.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MyApp.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MyApp.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MyApp.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MyApp.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MyApp.Headline6</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MyApp.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MyApp.Body2</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MyApp.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MyApp.Subtitle2</item>
        <item name="textAppearanceButton">@style/TextAppearance.MyApp.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MyApp.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MyApp.Overline</item>

    </style>

    <style name="ShapeAppearance.MyApp.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.MyApp.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.MyApp.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
    </style>

    <!--Text custom style-->

    <style name="TextAppearance.MyApp.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">@font/rubik_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">97.54sp</item>
        <item name="android:letterSpacing">-0.015</item>
    </style>

    <style name="TextAppearance.MyApp.Headline2" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">@font/rubik_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">60.69sp</item>
        <item name="android:letterSpacing">-0.008</item>
    </style>

    <style name="TextAppearance.MyApp.Headline3" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">48.77sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.MyApp.Headline4" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">34.54sp</item>
        <item name="android:letterSpacing">0.007</item>
    </style>

    <style name="TextAppearance.MyApp.Headline5" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24.38sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.MyApp.Headline6" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20.32sp</item>
        <item name="android:letterSpacing">0.0125</item>
    </style>

    <style name="TextAppearance.MyApp.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16.26sp</item>
        <item name="android:letterSpacing">0.03125</item>
    </style>

    <style name="TextAppearance.MyApp.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14.22sp</item>
        <item name="android:letterSpacing">0.01785</item>
    </style>

    <style name="TextAppearance.MyApp.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16.26sp</item>
        <item name="android:letterSpacing">0.009375</item>
    </style>

    <style name="TextAppearance.MyApp.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14.22sp</item>
        <item name="android:letterSpacing">0.00714</item>
    </style>

    <style name="TextAppearance.MyApp.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14.22sp</item>
        <item name="android:letterSpacing">0.0892</item>
    </style>

    <style name="TextAppearance.MyApp.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="fontWeight">400</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12.19sp</item>
        <item name="android:letterSpacing">0.0333</item>
    </style>

    <style name="TextAppearance.MyApp.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12.19sp</item>
        <item name="android:letterSpacing">0.1666</item>
    </style>

    <!--button-->
    <style name="Button.MyApp.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="CardView.MyApp.Basic" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">3dp</item>
    </style>
    
    <style name="FABStyle">
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerSize">20dp</item>
    </style>

</resources>
